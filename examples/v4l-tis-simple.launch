<launch>
  <!-- This launchfile should bring up a node that broadcasts a ros image
       transport on /webcam/image_raw -->

  <arg name="DEVICE" default="/dev/video0"/>
  <!-- The GStreamer framerate needs to be an integral fraction -->
  <arg name="FPS" default="30/1"/>
  <arg name="PUBLISH_FRAME" default="false"/>
  <arg name="GST10" default="true"/>
  <arg name="image_encoding" default="rgb8"/>
  <arg name="width" default="1920"/>
  <arg name="height" default="1080"/>
  <arg name="camera_info_url" default="package://gscam/examples/uncalibrated_parameters.ini"/>
  

  <node ns="v4l" name="gscam_driver_v4l" pkg="gscam" type="gscam" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="$(arg camera_info_url)"/>
    <param unless="$(arg GST10)" name="gscam_config" value="v4l2src device=$(arg DEVICE) ! video/x-raw-rgb,framerate=$(arg FPS) ! ffmpegcolorspace"/>
    <param if="$(arg GST10)" name="gscam_config" value="tcambin name=source video/x-bayer,framerate=$(arg FPS), width=$(arg
    width),height=$(arg height) ! videoconvert ! videoscale"/>
    <param name="frame_id" value="/v4l_frame"/>
    <param name="image_encoding" value="$(arg image_encoding)"/>
    <param name="sync_sink" value="true"/>
    <param name="auto_gain" value="true"/>
    <param name="auto_exposure" value="true"/>
  </node>

  <node if="$(arg PUBLISH_FRAME)" name="v4l_transform" pkg="tf" type="static_transform_publisher" args="1 2 3 0 -3.141 0 /world /v4l_frame 10"/>
</launch>
